<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .home-container {
            max-width: 480px;
            margin: 100px auto;
            padding: 2rem;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 12px rgba(0,0,0,0.08);
        }
    </style>
</head>
<body>
    <div class="container home-container text-center">
        <h2 class="mb-4">Welcome to MovieTracker</h2>

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(message) { %>
                    <div><%= message %></div>
                <% }); %>
            </div>
            <p class="lead">Hello, <strong><%= user.username %></strong>!</p>
            <a href="/logout" class="btn btn-danger w-100 mt-3">Logout</a>
        <% } else { %>
            <a href="/register" class="btn btn-primary w-100 mb-2">Register</a>
            <a href="/login" class="btn btn-outline-primary w-100">Login</a>
        <% } %>
    </div>
</body>
</html>
